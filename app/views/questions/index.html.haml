%p#notice= notice
%h1 Questions
%table
  %thead
    %tr
      %th Quiz
      %th Body
      %th Position
      %th Question type
      %th Created at
      %th Updated at
      %th Answer
      %th{:colspan => "3"}
  %tbody
    - @questions.each do |question|
      %tr
        %td= question.quiz_id
        %td= question.body
        %td= question.position
        %td= question.question_type
        %td= question.created_at
        %td= question.updated_at
        %td= question.answer_id
        %td= link_to 'Show', question
        %td= link_to 'Edit', edit_question_path(question)
        %td= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Question', new_question_path
